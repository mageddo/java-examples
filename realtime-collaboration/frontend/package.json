{
  "name": "realtime-collaboration-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild script.js --bundle --platform=browser --format=iife --global-name=App --target=es2015 --main-fields=browser,module,main --supported:dynamic-import=false --outfile=dist.js",
